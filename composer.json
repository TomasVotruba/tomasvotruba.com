{
    "name": "tomasvotruba/website",
    "type": "project",
    "license": "MIT",
    "description": "Blog about hacking PHP, education and being the laziest PHP programmer in the world",
    "require": {
        "php": "^8.2",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "imagine/imagine": "^1.5",
        "laravel/framework": "^11.38",
        "league/commonmark": "^2.6",
        "nesbot/carbon": "^2.72",
        "nette/utils": "^4.0",
        "noweh/twitter-api-v2-php": "^3.6",
        "openai-php/client": "^0.10.3",
        "symfony/yaml": "^6.4"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^2.1.1",
        "phpstan/phpstan-webmozart-assert": "^2.0",
        "phpunit/phpunit": "^11.5",
        "rector/rector": "^2.0",
        "rector/swiss-knife": "^1.0",
        "symplify/easy-coding-standard": "^12.5",
        "symplify/phpstan-extensions": "^12.0",
        "tomasvotruba/bladestan": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan",
        "check-cs": "vendor/bin/ecs",
        "fix-cs": "vendor/bin/ecs check --fix --ansi",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "php-http/discovery": true
        }
    }
}
