{
    "name": "tomasvotruba/website",
    "license": "MIT",
    "description": "Blog about hacking PHP, education and being the laziest PHP programmer in the world",
    "require": {
        "php": ">=8.0",
        "danielstjules/stringy": "^3.1",
        "erusev/parsedown-extra": "^0.8.1",
        "j7mbo/twitter-api-php": "^1.0.6",
        "nette/utils": "^3.2",
        "symfony/asset": "^5.4",
        "symfony/cache": "^5.4",
        "symfony/console": "^5.4",
        "symfony/dotenv": "^5.4",
        "symfony/framework-bundle": "^5.4",
        "symfony/http-foundation": "^5.4",
        "symfony/http-kernel": "^5.4",
        "symfony/twig-bridge": "^5.4",
        "symfony/twig-bundle": "^5.4",
        "symfony/yaml": "^5.4",
        "symplify/amnesia": "^9.4.64",
        "symplify/autowire-array-parameter": "^9.4.64",
        "symplify/package-builder": "^9.4.64",
        "symplify/smart-file-system": "^9.4.64",
        "symplify/symfony-static-dumper": "^9.4.64",
        "twig/twig": "^3.3"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.99",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^0.11.60",
        "spatie/http-status-check": "^3.3",
        "symplify/coding-standard": "^9.4.64",
        "symplify/easy-coding-standard": "^9.4.64",
        "symplify/phpstan-extensions": "^9.4.64",
        "symplify/phpstan-rules": "^9.4.64"
    },
    "autoload": {
        "psr-4": {
            "TomasVotruba\\Website\\": "src",
            "TomasVotruba\\Blog\\": "packages/blog/src",
            "TomasVotruba\\Tweeter\\": "packages/tweeter/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TomasVotruba\\Tweeter\\Tests\\": "packages/tweeter/tests"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse --ansi --error-format symplify",
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": [
            "vendor/bin/ecs check --fix --ansi",
            "bin/clear_posts_trailing_whitespaces.sh"
        ],
        "check-status": "vendor/bin/http-status-check scan https://tomasvotruba.com --output invalid-links.txt --ansi",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
