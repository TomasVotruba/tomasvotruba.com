{
    "name": "tomasvotruba/website",
    "license": "MIT",
    "description": "Blog about hacking PHP, education and being the laziest PHP programmer in the world",
    "require": {
        "php": ">=8.1",
        "erusev/parsedown-extra": "^0.8.1",
        "nette/utils": "^3.2",
        "symfony/asset": "^6.1",
        "symfony/console": "^6.1",
        "symfony/framework-bundle": "^6.1",
        "symfony/http-kernel": "^6.1",
        "symfony/string": "^6.1",
        "symfony/twig-bundle": "^6.1",
        "symfony/yaml": "^6.1",
        "symplify/autowire-array-parameter": "^11.1.16",
        "symplify/package-builder": "^11.1.16",
        "symplify/smart-file-system": "^11.1.16",
        "symplify/symfony-static-dumper": "^11.1.16",
        "twig/twig": "^3.3"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.9.1",
        "phpstan/phpstan-webmozart-assert": "^1.2",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "dev-main",
        "symplify/coding-standard": "^11.1.16",
        "symplify/easy-ci": "^11.1.16",
        "symplify/easy-coding-standard": "^11.1.16",
        "symplify/phpstan-extensions": "^11.1.16",
        "symplify/phpstan-rules": "^11.1.16",
        "tomasvotruba/type-coverage": "^0.0.1",
        "tracy/tracy": "^2.9"
    },
    "autoload": {
        "psr-4": {
            "TomasVotruba\\Website\\": "src",
            "TomasVotruba\\Blog\\": "packages/blog/src"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse --ansi --error-format symplify",
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": [
            "vendor/bin/ecs check --fix --ansi",
            "bin/clear_posts_trailing_whitespaces.sh"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
