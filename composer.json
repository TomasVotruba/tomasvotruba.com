{
    "name": "tomasvotruba/website",
    "license": "MIT",
    "description": "Blog about hacking PHP, education and being the laziest PHP programmer in the world",
    "require": {
        "php": ">=8.1",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "imagine/imagine": "^1.3",
        "laravel/framework": "^10.1",
        "laravel/tinker": "^2.8",
        "nette/utils": "^3.2",
        "spatie/laravel-markdown": "^2.2",
        "symfony/yaml": "^6.2",
        "symplify/vendor-patches": "^11.2",
        "tomasvotruba/punchcard": "^0.1.1"
    },
    "require-dev": {
        "tomasvotruba/bladestan": "dev-main",
        "tomasvotruba/laratyped": "dev-main",
        "barryvdh/laravel-debugbar": "^3.8",
        "barryvdh/laravel-ide-helper": "^2.13",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/larastan": "^2.4",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-webmozart-assert": "^1.2",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^0.15",
        "spatie/laravel-ignition": "^2.0",
        "symplify/easy-coding-standard": "^11.2",
        "symplify/phpstan-extensions": "^11.2",
        "tomasvotruba/type-coverage": "^0.0.10",
        "tomasvotruba/unused-public": "^0.0.32"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse --ansi --error-format symplify",
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "cweagans/composer-patches": true
        }
    },
    "extra": {
        "patches": {
            "spatie/shiki-php": [
                "patches/spatie-shiki-php-src-shiki-php.patch"
            ]
        }
    }
}
