<article class="blog-post">
    <header>
        {% if post.thumbnail %}
            <img src="/images/posts/thumbnail/{{ post.thumbnail }}" class="pull-left post-thumbnail hidden-xs">
            <meta property="og:image" content="{{ site.url }}/images/posts/thumbnail/{{ post.thumbnail }}" />
        {% endif %}

        <a href="{{ post.url }}">
            <h2>{{ post.title }}</h2>
        </a>

        {{ include('partials/postMetadataLine.twig') }}
    </header>

    <p>{{ post.meta.perex }}</p>
    <div class="clearfix"></div>
</article>
