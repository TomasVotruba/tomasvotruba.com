{% macro trend(value) %}
    <nobr>
        {% if value > 0 %}
            <strong>
                <span class="text-success">+ {{ value|number_format }} %</span>
            </strong>
        {% else %}
            <span class="text-danger">- {{ value|number_format|abs }} %</span>
        {% endif %}
    </nobr>
{% endmacro %}

{% macro number(value) %}
    {{ value|millions}}
{% endmacro %}

{% macro adoption(value) %}
    {% set adoption_word %}
        <span class="hidden-md-up">ad.</span><span class="hidden-sm-down">adoption</span>
    {% endset %}

    {% if value > 75 %}
        <strong>
            <span class="text-success">{{ value|number_format }} % {{ adoption_word }}</span>
        </strong>
    {% elseif value > 50 %}
        <span class="text-success">{{ value|number_format }} % {{adoption_word }}</span>
    {% elseif value > 25 %}
        <span class="text-danger">{{ value|number_format }} % {{adoption_word }}</span>
    {% else %}
        <strong>
            <span class="text-danger">{{ value|number_format }} % {{adoption_word }}</span>
        </strong>
    {% endif %}
{% endmacro %}
