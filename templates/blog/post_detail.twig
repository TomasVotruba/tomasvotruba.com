<!DOCTYPE html>
<html lang="en">
    {% include "_snippets/head.twig" %}
    <body>
        {# @var post \TomasVotruba\Blog\ValueObject\Post #}
        <!-- post_id: {{ post.getId() }} -->
        {% include "_snippets/menu.twig" %}

        <div class="container-fluid post" id="content">
            <h1>{{ post.title|raw }}</h1>

            <div class="pull-right">
                <a href="{{ post.gitHubEditUrl }}">Found a typo? Edit me</a>
            </div>

            <time datetime="{{ post.getDateTime|date('Y-m-D') }}">
                {{ post.getDateTime|date('Y-m-d') }}
            </time>

            {% if post.deprecated %}
                <div class="card border-danger">
                    <div class="card-header text-white bg-danger">
                        <strong>This post is deprecated at {{ post.deprecatedAt|date("F Y") }}</strong>
                    </div>
                    <div class="card-body pb-2">
                        {{ post.deprecatedMessage|markdown|raw }}
                    </div>
                </div>

                <br>
            {% endif %}

            {% if post.updated %}
                <div class="card border-success mt-4">
                    <div class="card-header text-white bg-success">
                        This post was updated at {{ post.updatedAt|date("F Y") }}.

                        <strong>What is new?</strong>
                    </div>
                    {% if post.updatedMessage is not null %}
                        <div class="card-body pb-2">
                            {{ post.updatedMessage|markdown|raw }}
                        </div>
                    {% endif %}
                </div>

                <br>
            {% endif %}

            <div class="card card-bigger mb-5">
                <div class="card-body pb-2">
                    {{ post.perex|markdown|raw }}
                </div>
            </div>

            {{ post.htmlContent|raw }}

            <br>


            <div class="card mt-5">
                <div class="card-body text-center mt-2">
                    <p>
                        Have you find this post useful? <strong> Do you want more?</strong>
                    </p>
                    <p>
                        Follow me on <a href="https://twitter.com/votrubaT">Twitter</a>, <a href="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::RSS')) }}">RSS</a> or <a href="https://github.com/sponsors/TomasVotruba">GitHub Sponsors</a>.
                    </p>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-body text-white bg-success text-center">
                    {% set previous_post = previous_post(post) %}
                    {% if previous_post is not null %}
                        <a href="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::POST_DETAIL'), {'slug': previous_post.getSlug }) }}" class="d-block">
                            <div>
                                Read next â†’ <strong>{{ previous_post.title|replace({'&nbsp;': ' '}) }}</strong>
                            </div>
                        </a>
                    {% endif %}
                </div>
            </div>

            <br>

            <a name="comments"></a>
            {% include "_snippets/disqus_comments.twig" %}
        </div>

        <script id="dsq-count-scr" src="https://{{ disqus_shortname }}.disqus.com/count.js" async defer></script>

        {% include "_snippets/footer.twig" %}
    </body>
</html>

{% block socialTags %}
    {# Facebook sharing #}
    <meta property="og:type" content="article" />
    <meta property="og:title" content="{{ post.title|replace({'&nbsp;':' '})|escape }}" />
    <meta property="og:description" content="{{ post.perex|striptags }}" />
    <meta property="og:url" content="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::POST_DETAIL'), {slug: post.slug }) }}" />

    {# Twitter sharing #}
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@votrubaT">
    <meta name="twitter:title" content="{{ post.title|replace({'&nbsp;':' '})|escape }}" />
    <meta name="twitter:description" content="{{ post.perex|striptags }}" />
{% endblock %}
