<ul class="list-unstyled line-separated post-metadata-line">
    {% for post in posts %}
        <li class="col-md-12">
            <a href="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::POST_DETAIL'), {
                'slug': post.slug
            }) }}" class="post-list-title">
                {{ post.title|raw }}
            </a>

            {% include "_snippets/post/post_metadata_line.twig" with { post: post } %}
        </li>
    {% endfor %}
</ul>
