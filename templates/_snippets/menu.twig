                <li class="{% if is_current_route(constant('TomasVotruba\\Website\\ValueObject\\RouteName::PHP_FRAMEWORK_TRENDS')) %}active{% endif %}">
                    <a href="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::PHP_FRAMEWORK_TRENDS')) }}">Trends</a>
                </li>
                <li class="{% if is_current_routes([
                    constant('TomasVotruba\\Website\\ValueObject\\RouteName::CLUSTERS'),
                    constant('TomasVotruba\\Website\\ValueObject\\RouteName::CLUSTER_DETAIL')
                ]) %}active{% endif %}">
                    <a href="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::CLUSTERS')) }}">Clusters</a>
                </li>
                <li class="{% if is_current_route(constant('TomasVotruba\\Website\\ValueObject\\RouteName::PROJECTS')) %}active{% endif %}">
                    <a href="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::PROJECTS')) }}">Projects</a>
