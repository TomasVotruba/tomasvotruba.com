{# normal menu #}

<div class="hidden-sm-down">
    <nav class="navbar">
        <div class="container-fluid">
            <ul>
                <li id="logo">
                    <img src="https://avatars1.githubusercontent.com/u/924196?s=60&v=4" class="me_avatar">
                    Tomas Votruba
                </li>
                <li class="{% if is_current_routes([
                    constant('TomasVotruba\\Website\\ValueObject\\RouteName::HOMEPAGE'),
                    constant('TomasVotruba\\Website\\ValueObject\\RouteName::BLOG_ARCHIVE'),
                    constant('TomasVotruba\\Website\\ValueObject\\RouteName::POST_DETAIL')
                ]) %}active{% endif %}">
                    <a href="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::HOMEPAGE')) }}">Blog</a>
