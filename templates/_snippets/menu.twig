                <li class="{% if is_current_route(constant('TomasVotruba\\Website\\ValueObject\\RouteName::MISSION')) %}active{% endif %}">
                    <a href="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::MISSION')) }}">Mission</a>
                </li>
                <li class="{% if is_current_route(constant('TomasVotruba\\Website\\ValueObject\\RouteName::CONTACT')) %}active{% endif %}">
                    <a href="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::CONTACT')) }}">Contact</a>
                </li>
                <li id="top-menu-search">
                    {% include "_snippets/search_form.twig" %}
                </li>
            </ul>
        </div>
    </nav>
</div>

