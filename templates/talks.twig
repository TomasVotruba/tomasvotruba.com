{% extends "base.twig" %}

{% block content %}
    <div class="container" id="talks">
        <h1>
            {{ title }}
            <br>
            <small>I enjoy Sharing my Know-How with PHP Communities</small>
        </h1>

        <div class="text-center">
            <a href="https://www.youtube.com/watch?v=gQWQA-GZxXc">
                <img src="/assets/images/talk_on_stage.jpg" alt="" class="img-thumbnail" style="max-height:22em">
            </a>
            <p class="mt-2 small">
                <em>How to Make Refactoring Legacy fun Again</em> at PHP FwDays, Ukraine, 2019 (<a href="https://www.youtube.com/watch?v=gQWQA-GZxXc">watch the talk</a>)
            </p>
        </div>

        <br>

        <h2 class="slim">
            I spoke at {{ talks|talks_count + 10 }} PHP conferences and meetups â†“
        </h2>

        <p>Here are those I enjoyed the most:</p>

        <br>

        {% for talk in talks %}
            <div class="card mb-5" id="{{ talk.anchor }}">
                <div class="text-center card-header">
                    <h2>
                        <a href="#{{ talk.anchor }}">{{ talk.title }}</a>
                    </h2>
                </div>
                <div class="card-body">
                    {% if talk.demo_link is defined %}
                        <a href="{{ talk.demo_link }}" class="btn btn-dark btn-sm mt-2 mr-2 mb-2">
                            <em class="fab fa-fw fa-github"></em>
                            See Demo on Github
                        </a>
                    {% endif %}

                    {% if talk.video_link is defined %}
                        <a href="{{ talk.video_link }}" class="btn btn-danger btn-sm mt-2 mr-2 mb-2">
                            <em class="fab fa-fw fa-youtube"></em>
                            Watch Talk
                        </a>
                    {% endif %}

                    {% if talk.related_post is defined %}
                        <a href="{{ talk.related_post }}" class="btn btn-info btn-sm mt-2 mr-2 mb-2">
                            <em class="fas fa-fw fa-book"></em>
                            Read Post
                        </a>
                    {% endif %}

                    {% if talk.events|length > 1 %}
                        <p class="mt-3">
                            <strong>Presented at</strong>
                        </p>

                        <ul>
                            {% for event in talk.events %}
                                <li>
                                    {% if event.url is defined %}
                                        <a href="{{ event.url }}" class="mt-2 mb-2">{{ event.name }}</a>
                                    {% else %}
                                        {{ event.name }}
                                    {% endif %}

                                    @ {{ event.location }}, {{ event.date|date("Y-m") }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="mt-3">
                            <strong>Presented at</strong>

                            <a href="{{ talk.events[0].url }}" class="mt-2 mb-2">
                                {{ talk.events[0].name }}
                            </a>
                        </p>
                    {% endif %}
                </div>
            </div>
        {% endfor %}

        <hr>

        <h2 class="slim pb-3">
            How PHP folks enjoy my talks?
        </h2>

        {% for talk_feedback in talks_feedback %}
            <div class="row">
                <div class="col-md-12 mb-5">
                    <img src="{{ talk_feedback.photo }}" alt="" class="rounded-circle img-thumbnail pull-right" style="max-width: 5em">

                    <q class="blockquote">{{ talk_feedback.feedback }}</q>

                    <div class="mt-2">
                        <strong class="name">
                            {{ talk_feedback.name }}
                        </strong>

                        <div class="mt-4 mb-4">
                            {% for i in 1..talk_feedback.rating %}
                                <em class="fas fa-2x fa-thumbs-up text-success"></em>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        <p class="text-center mb-5">
            <a href="https://joind.in/user/TomasVotruba" class="btn btn-info">
                Find more feedback on Joind.in
            </a>
        </p>

        <hr>

        <h2 class="slim pb-3">
            Do you want me to Talk at your Conference?
        </h2>

        <div class="text-center">
            <p class="text-center">
                <a href="https://symposiumapp.com/u/tomasvotruba" class="btn btn-danger">
                    Pick one of my talks on Symposium
                </a>

                and <a href="/contact/">write me</a>.
                <br>
            </p>
            <p>
                I'll be happy to visit you and meet new people!
            </p>
        </div>

        <br>
    </div>
{% endblock %}
