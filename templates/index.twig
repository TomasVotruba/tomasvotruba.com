{% extends 'base.twig' %}

{% block content %}
    <div class="container-fluid" id="blog">
        <div class="mt-5 mb-2 subline text-center">
            <p>
                Read weekly insights of <strong><a href="http://threevirtues.com/">the laziest PHP developer</a></strong> you've met
            </p>

            {# updated from Google Analytics, 2020-04-25 #}
            <p>
                Join <strong>25 087 learning PHP developers</strong> every month on <a href="https://twitter.com/votrubaT">Twitter</a> or
                <a href="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::RSS')) }}">RSS</a>
            </p>
        </div>

        <div class="row">
            {% set date_lines = [] %}

            {% set was_first_post_marked = false %}
            {% set displayed_post_count = 0 %}
            {% set currentYear = "now"|date('Y') %}

            {# display only last X posts, for DOM performance on mobile #}
            {% for post in posts %}
                {% set postYear = post.dateTime|date('Y') %}

                {% if postYear != currentYear and postYear not in date_lines %}
                    <div class="col-md-12 yearLine mb-5 clearfix" id="year-{{ postYear }}">
                        <br>
                        <br>
                        {{ postYear }}
                        {# https://stackoverflow.com/a/9432583/1348344 #}
                        {% set date_lines = date_lines|merge({postYear: postYear}) %}
                    </div>
                {% endif %}

                {% set displayed_post_count = displayed_post_count + 1 %}

                {% if loop.first %}
                    <article class="pt-2 pb-4 col-md-12">
                        <h2 class="firstPost text-center">
                            <a href="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::POST_DETAIL'), {slug: post.slug }) }}">
                                {{ post.title|raw }}
                            </a>
                        </h2>

                        <div class="text-center">
                            {% include "_snippets/post/post_metadata_line.twig" with { post: post } %}
                        </div>
                    </article>
                {% else %}
                    {% if loop.index == 2 %}<ul class="mt-5 list-unstyled">{% endif %}

                    <li class="mb-3 col-md-12">
                        <a href="{{ path(constant('TomasVotruba\\Website\\ValueObject\\RouteName::POST_DETAIL'), {slug: post.slug }) }}" class="post-list-title">{{ post.title|raw }}</a>

                        {% include "_snippets/post/post_metadata_line.twig" with { post: post } %}
                    </li>
                    <hr>
                {% endif %}
            {% endfor %}
            </ul>
        </div>

        <br>
    </div>
{% endblock %}
